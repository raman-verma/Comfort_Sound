<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundtest">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6280e2"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/appicon512_1"/>

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="COMFORT SOUND"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="54px"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="130dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="43dp"
            android:layout_toLeftOf="@+id/button2"
            android:layout_toStartOf="@+id/button2"
            android:gravity="center"
            android:text="ok1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="ok2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="55dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/button2"
            android:layout_toRightOf="@+id/button2"
            android:gravity="center"
            android:text="ok3" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/recentplay"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/recentplay_bg"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp">

            <Button
                android:id="@+id/decrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/chronometer"
                android:layout_toLeftOf="@+id/chronometer"
                android:layout_toStartOf="@+id/chronometer"
                android:background="@android:drawable/presence_busy" />

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignLeft="@+id/recentplay"
                android:layout_alignStart="@+id/recentplay"
                android:layout_centerVertical="true"
                android:textSize="50px"
                android:textColor="#4169E1"
                android:gravity="center" />

            <Button
                android:id="@+id/increase"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/chronometer"
                android:layout_toEndOf="@+id/chronometer"
                android:layout_toRightOf="@+id/chronometer"
                android:background="@android:drawable/ic_input_add" />

            <ToggleButton
                android:textOff=""
                android:textOn=""
                android:background="@drawable/ic_toggle_bg"
                android:id="@+id/start_timer"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
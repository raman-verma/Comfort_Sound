    <sound.myapp.com.comfortsound.ThreeButtonState
        android:id="@+id/imageButtonPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:clickable="true" />

    <TextView
        android:id="@+id/textSngName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/imageButtonPlay"
        android:layout_toLeftOf="@+id/toggleButtonFav"
        android:layout_toRightOf="@+id/imageButtonPlay"
        android:layout_toStartOf="@+id/toggleButtonFav"
        android:ellipsize="end"
        android:paddingBottom="15dp"
        android:singleLine="true"
        android:text="Song Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ToggleButton
        android:id="@+id/toggleButtonFav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="@drawable/ic_toggle_bg"
        android:checked="false"
        android:gravity="center|center_vertical"
        android:maxHeight="32dp"
        android:maxWidth="32dp"
        android:minHeight="24dp"
        android:minWidth="24dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textOff=""
        android:textOn="" />

</RelativeLayout>